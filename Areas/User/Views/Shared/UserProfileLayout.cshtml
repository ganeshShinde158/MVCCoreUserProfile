@model MVCCoreUserProfile.Models.TbluserDetail

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>UserProfileLayout</title>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>JobSuccessCraft</title>
    <link rel="stylesheet" href="/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css">
    <style>
        .sidebar,
        .main-content {
            display: @((Model != null) ? "block" : "none");
        }

        .sidebar {
            height: 100%;
            width: 220px;
            position: fixed;
            top: 0;
            left: 0;
            background-color: #2c3e50;
            color: white;
            padding-top: 20px;
            min-height: 100vh;
        }

            .sidebar ul {
                list-style: none;
                padding-left: 0;
            }

            .sidebar a {
                display: block;
                padding: 10px;
                text-decoration: none;
                color: white;
            }

                .sidebar a:hover {
                    background-color: #2c3e50;
                }


        .main-content {
            margin-left: 220px;
            padding: 20px;
        }


        .navbar {
            background-color: #2c3e50;
            color: white;
        }

            .navbar a {
                color: white;
            }

        .navbar-toggler-icon {
            background-color: white;
        }


        .list-group-item {
            background-color: #2c3e50;
            color: white;
        }

            .list-group-item a {
                color: white;
                text-decoration: none;
            }

                .list-group-item a:hover {
                    text-decoration: none;
                    color: white;
                }

        body {
            background-color: #f5f5f5;
        }

        .navbar {
            background-color: #2c3e50;
            border-bottom: 4px solid #27ae60;
        }

        .navbar-brand img {
            filter: brightness(0) invert(1);
        }

        .navbar-dark .navbar-toggler-icon {
            filter: brightness(0) invert(1);
        }

        .navbar-nav .nav-link {
            color: #ecf0f1;
            margin: 0 15px;
            font-weight: bold;
        }

            .navbar-nav .nav-link:hover {
                color: #27ae60;
            }

        .container-main {
            background-color: #ffffff;
            box-shadow: 0 0 20px rgba(0, 0, 0, 0.1);
            border-radius: 10px;
            padding: 30px;
            margin-top: 30px;
            margin-bottom: 30px;
        }

        .footer {
            background-color: #34495e;
            color: #ecf0f1;
            padding: 15px 0;
        }

    </style>
</head>
<body>
    @if (Model != null)
    {
        <div class="sidebar">

            <h3>User Panel</h3>

            <div>
                <img src="~/Photo/@Model.ProfilePhoto" style="height:160px" ,width=" 160px" class="rounded-circle  ms-5" />
            </div>
            <div>
                <span class="navbar-text ms-3">User Code: @Model.UserName</span>
            </div>
            <ul class="list-group">
                <li class="list-group-item"><a href="/Employee/Dashboard/Index">Dashboard</a></li>
                <li class="list-group-item"><a href="/Employee/Profile/Index">Profile</a></li>

                <li class="list-group-item"><a href="/User/UserLogin/UserDashboard">Profile</a></li>
                <li class="list-group-item"><a href="/User/UserLogin/UserDashboard">Profile</a></li>
                <li class="list-group-item"><a href="/User/Exam/Index">Exam</a></li>



                


            </ul>
        </div>

        <div class="main-content">
            <nav class="navbar navbar-expand-lg navbar-dark">
                <div class="container-fluid">
                    <a href="#" class="navbar-brand">User Management System</a>
                    <button type="button" class="navbar-toggler" data-toggle="collapse" data-target="#navbarCollapse2">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="collapse navbar-collapse" id="navbarCollapse2">
                        <div class="navbar-nav">
                            <a href="#" class="nav-item nav-link">Home</a>
                            <a href="#" class="nav-item nav-link">About</a>
                            <a href="#" class="nav-item nav-link">Users</a>
                        </div>
                        <form class="form-inline ml-auto">
                            <span class="navbar-text mr-3">Hello, @Model.FullName</span>
                            <a href="/Employee/Login/LogOut" class="btn btn-outline-light">Log Out</a>
                        </form>
                    </div>
                </div>
            </nav>
            <div class="row" style="padding:20px">
                @RenderBody()
            </div>
        </div>
    }
    else
    {
        <div>
            <h3>You are not logged in as an employee. Please log in.</h3>

        </div>
    }

</body>
</html>
